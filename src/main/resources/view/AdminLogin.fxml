<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #E0FFD1;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project.mentalHealthTherapyCenter.controller.Login.UserLogin">

    <!-- Title -->
    <Label layoutX="256.0" layoutY="35.0" prefHeight="32.0" prefWidth="201.0" text="ADMIN LOGIN" textFill="#1c3334">
        <font><Font name="Arial Bold" size="28.0" /></font>
    </Label>

    <!-- Username -->
    <Label layoutX="139.0" layoutY="120.0" text="Admin Name">
        <font><Font name="System Bold" size="21.0" /></font>
    </Label>
    <TextField fx:id="adminUserName" layoutX="139.0" layoutY="145.0" prefWidth="320.0" style="-fx-background-color: transparent; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 2px 0;" />
    <PasswordField fx:id="adminPasswordTextField" layoutX="139.0" layoutY="215.0" prefWidth="320.0" style="-fx-background-color: transparent; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 2px 0;" />

    <!-- Show password checkbox -->
    <CheckBox fx:id="adminCheckBox" layoutX="138.0" layoutY="272.0" mnemonicParsing="false" onAction="#adminCheckBoxAction" text="Show Password">
        <font><Font size="13.0" /></font>
    </CheckBox>

    <!-- Forgot Password -->
    <Hyperlink fx:id="forgetPass" layoutX="364.0" layoutY="269.0" onMouseClicked="#forgetPassAction" text="Forgot Password?" underline="true">
        <font>
            <Font size="13.0" />
        </font></Hyperlink>

    <!-- Login Button -->
    <Button fx:id="login" layoutX="144.0" layoutY="347.0" mnemonicParsing="false" onAction="#adminLoginAction" prefHeight="45.0" prefWidth="320.0" style="-fx-background-color: #1C3334;" text="Login" textFill="white">
        <font><Font name="Arial Bold" size="18.0" /></font>
        <effect><DropShadow /></effect>
    </Button>
    <Label layoutX="139.0" layoutY="189.0" text="Password">
        <font>
            <Font name="System Bold" size="21.0" />
        </font>
    </Label>
    <ImageView fitHeight="84.0" fitWidth="80.0" layoutX="150.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../img/users.png" />
        </image>
    </ImageView>

</AnchorPane>
