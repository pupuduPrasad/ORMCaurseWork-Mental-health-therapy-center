<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project.mentalHealthTherapyCenter.controller.Login.UserRegister">
    <children>

        <!-- Content area -->
        <AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #C5CBE3;">
            <children>
                <Label layoutX="155.0" layoutY="46.0" text="REGISTER ACCOUNT" textFill="#376e6f">
                    <font>
                        <Font name="Georgia Bold" size="28.0" />
                    </font>
                </Label>

                <!-- Compact form fields - Labels on left, fields on right -->
                <Label layoutX="65.0" layoutY="121.0" prefHeight="18.0" prefWidth="124.0" text="USER ID">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="userId" layoutX="195.0" layoutY="120.0" prefWidth="150.0" style="-fx-background-color: #e0e0e0; -fx-padding: 2;">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <Label layoutX="65.0" layoutY="160.0" prefHeight="18.0" prefWidth="124.0" text="FULL NAME">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="userFUllName" layoutX="195.0" layoutY="152.0" prefHeight="25.0" prefWidth="350.0" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;">
               <font>
                  <Font size="13.0" />
               </font></TextField>

                <Label layoutX="65.0" layoutY="196.0" prefHeight="18.0" prefWidth="124.0" text="E-MAIL">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="userEmail" layoutX="195.0" layoutY="188.0" prefHeight="25.0" prefWidth="350.0" promptText="prasad@gmail.com" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;">
               <font>
                  <Font size="13.0" />
               </font></TextField>

                <Label layoutX="65.0" layoutY="232.0" prefHeight="18.0" prefWidth="124.0" text="ROLE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="userRole" layoutX="195.0" layoutY="224.0" prefHeight="25.0" prefWidth="350.0" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;" />

                <Label layoutX="65.0" layoutY="267.0" prefHeight="18.0" prefWidth="124.0" text="USERNAME">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="userName" layoutX="195.0" layoutY="259.0" prefHeight="25.0" prefWidth="350.0" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;">
               <font>
                  <Font size="13.0" />
               </font></TextField>

                <Label layoutX="65.0" layoutY="302.0" prefHeight="18.0" prefWidth="124.0" text="PASSWORD">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordTextField" layoutX="195.0" layoutY="296.0" prefHeight="25.0" prefWidth="350.0" promptText="Enter Password" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;">
               <font>
                  <Font size="13.0" />
               </font></PasswordField>
                <TextField fx:id="passwordTextField" layoutX="195.0" layoutY="218.0" prefHeight="25.0" prefWidth="350.0" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;" visible="false" />

                <Label layoutX="65.0" layoutY="339.0" prefWidth="124.0" text="CONFIRM PW">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordConfirmPWField" layoutX="195.0" layoutY="334.0" prefHeight="25.0" prefWidth="350.0" promptText="Confirm Password" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;">
               <font>
                  <Font size="13.0" />
               </font></PasswordField>
                <TextField fx:id="passwordConfirmTextField" layoutX="195.0" layoutY="248.0" prefHeight="25.0" prefWidth="350.0" style="-fx-background-color: white; -fx-border-color: #4C8C8C; -fx-border-width: 0 0 1 0;" visible="false" />

                <CheckBox fx:id="showPasswordcheckBox" layoutX="195.0" layoutY="378.0" mnemonicParsing="false" onAction="#showPasswordcheckBox" text="SHOW PASSWORD" />

                <Button fx:id="signup" layoutX="130.0" layoutY="410.0" mnemonicParsing="false" onAction="#signupAction" prefHeight="35.0" prefWidth="350.0" style="-fx-background-color: #376E6F;" text="SIGN UP" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <effect>
                        <DropShadow />
                    </effect>
                </Button>

                <Label layoutX="162.0" layoutY="459.0" text="Already have an account?">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Hyperlink fx:id="clickhere" layoutX="319.0" layoutY="456.0" onMouseClicked="#clickhereAction" text="Click here" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
