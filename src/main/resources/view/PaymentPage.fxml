<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.ormcaursework.controller.PaymentPageController">
    <children>
        <!-- Title -->
        <Label layoutX="243.0" layoutY="24.0" text="Payment Management">
            <font>
                <Font name="System Bold" size="35.0" />
            </font>
        </Label>

        <!-- Select Patient -->
        <Label layoutX="224.0" layoutY="199.0" prefHeight="26.0" prefWidth="94.0" text="Select Patient:" />
        <ComboBox fx:id="cmbPatient" layoutX="384.0" layoutY="199.0" prefWidth="250.0" />

        <!-- Select Therapy Program -->
        <Label layoutX="224.0" layoutY="239.0" prefHeight="27.0" prefWidth="134.0" text="Select Therapy Program:" />
        <ComboBox fx:id="cmbTherapyProgram" layoutX="384.0" layoutY="239.0" prefWidth="250.0" />

        <!-- Amount Due -->
        <Label layoutX="224.0" layoutY="279.0" prefHeight="27.0" prefWidth="146.0" text="Payment Amount (LKR) :" />
        <TextField fx:id="txtAmountDue" layoutX="384.0" layoutY="279.0" prefWidth="250.0" />

        <!-- Payment Date -->
        <Label layoutX="224.0" layoutY="322.0" text="Payment Date:" />
        <DatePicker fx:id="dpPaymentDate" layoutX="384.0" layoutY="322.0" prefWidth="250.0" />

        <!-- Buttons -->
        <Button fx:id="btnProcessPayment" layoutX="390.0" layoutY="371.0" prefHeight="26.0" prefWidth="78.0" text="Save" />
      <Button fx:id="btnProcessPayment1" layoutX="501.0" layoutY="371.0" prefHeight="26.0" prefWidth="78.0" text="Updated" />
      <Button fx:id="btnProcessPayment11" layoutX="606.0" layoutY="371.0" prefHeight="26.0" prefWidth="78.0" text="Delete" />
    </children>
</AnchorPane>
